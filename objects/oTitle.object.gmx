            <kind>1</kind>
            <string>///Screen Create
if !instance_exists(oScreen)
{
    instance_create(0, 0, oScreen);
}

text1position = 15;
text2position = text1position + 15;

text1positionmenu = 5;
text2positionmenu = text1positionmenu + 15;

flip = 0;
angle = 0;
rotatespeed = 1;
angle_limit = 25;

extrasize = 0;
extrasizespeed = 0.02;
extrasizelimit = 0.4;

sound[0] = sndPaddull;
sound[1] = sndBaddull;

colour = c_white;
hue = 0;

menu = false;
startgame = false;
global.coolmode = false;
secret = false;

gamepadsInit();

global.reverse[2] = false;

menuInit(working_directory + "title.txt", text1position + 25, 8);
</string>

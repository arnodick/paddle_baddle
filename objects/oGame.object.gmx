          <argument>
            <kind>1</kind>
            <string>///Object Controller

// Makes colours all crazy if cool mode was selected
if global.coolmode == true
{
    base_colour = make_color_hsv(hue, 255, 255);
    hue += 10;
}
else
{
    base_colour = c_white;
}

// Creates both the balls if none exist (Should only happen when the game starts)
if instance_number(oOffense) == 0
{
    createOffense(off_pos[0, 0], off_pos[0, 1], 0, playercolour[0]);
    createOffense(off_pos[1, 0], off_pos[1, 1], 1, playercolour[1]);
    resetOffense();
}
// Starts the counter to respawn a ball that's been destroyed
if instance_number(oOffense) == 1
{
    count += 1;
}
// Respawns missing ball once the counter is finished
if count &gt;= deathtimer
{
    var opp = instance_nearest(x, y, oOffense);
    if opp.player_num == 0
    {
        var num = 1;
    }
    else
    {
        var num = 0;
    }
    createOffense(off_pos[num, 0], off_pos[num, 1], num, playercolour[num]);
    createParticles(off_pos[num, 0], off_pos[num, 1], playercolour[num]);
    audio_play_sound(sndRespawn, 1, false);
    count = 0;
}
// Starts countdown when balls (huhuhu) are reset after goal (Only used for display of countodwn on screen?)
if countdown == true
{
    if countduration &gt; 0
    {
        countduration -= 1;
    }
    else
    {
        countduration = countdurationmax;
        countdownswitch -= 1;
        switch (countdownswitch)
        {
            case 3:
                audio_play_sound(sndSelect, 2, false);
                break;
            case 2:
                audio_play_sound(sndSelect, 2, false);
                break;
            case 1:
                audio_play_sound(sndSelect, 2, false);
                break;
            case 0:
                audio_play_sound(sndBounce, 2, false);
                break;
        }
    }
    if countdownswitch &lt; 0
    {
        countdown = false;
        countduration = countdurationmax;
        countdownswitch = countdowninit - 1;
    }
}

if goal == true
{
    // Brings up the menu and sets a winner once 5 points are scored
    if playerpoints[0] &gt;= 5 or playerpoints[1] &gt;= 5
    {
        gameover = true;
        if !instance_exists(oMenu)
        {
            instance_create(0, 0, oMenu);
        }
        var i;
        for (i = 0; i &lt; 2; i++)
        {
            if playerpoints[i] &gt;= 5
            {
                winner = i + 1;
            }
        }
    }
    //global.coolmode = true;
    else if !audio_is_playing(sndGoal)
    {
        goal = false;
        countdown = true;
    }
    else
    {
        base_colour = make_color_hsv(hue, 255, 255);
        hue += 10;
    }
}

// Quits the game if escape is pressed
if keyboard_check(vk_escape)
{
    game_end();
}
